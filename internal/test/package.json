{
  "name": "@auth0/cosmos-tests",
  "description": "Tests for Auth0 Cosmos",
  "version": "0.4.0",
  "repository": "auth0/cosmos",
  "author": "siddharthkp",
  "license": "MIT",
  "scripts": {
    "test": "jest --no-cache --ci --maxWorkers=2",
    "test-watch": "jest --watch",
    "test-unit": "jest unit --ci",
    "test-unit-watch": "jest unit --watch",
    "test-integration": "jest integration --no-cache --ci --maxWorkers=2",
    "test-integration-watch": "jest integration --watch",
    "coverage": "jest --coverage"
  },
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/setup.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.test.json",
        "diagnostics": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^(?!.*\\.(js|jsx|mjs|json)$)": "<rootDir>/fileTransform.js"
    }
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "babel-jest": "^23.4.2",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.0",
    "jest": "^24.1.0",
    "jest-styled-components": "^6.1.1",
    "react-testing-library": "5.3.2"
  },
  "dependencies": {
    "enzyme-to-json": "^3.3.4",
    "jest-dom": "3.0.0"
  }
}